<div class="row">
  <div class="span6">
    <h2>All Schools</h2>
  </div>
  <div class="span6 vertical-middle">
    <div class="pull-right"><%= link_to '<i class="fa fa-plus"></i> New School'.html_safe, new_school_path, class: "btn btn-success list-page-new-button" %></div>
  </div>
</div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td class="text-right"><%= link_to 'Edit', edit_school_path(school), class: "btn btn-mini" %>
            <%= link_to 'Delete', school, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
