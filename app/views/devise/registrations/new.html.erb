<div class="container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>

    <h2>Sign up</h2>
    <%= devise_error_messages! %>

    <div>
      <%= f.text_field :title, class: "input-small", autofocus: true, placeholder: "Title" %>
      <span class="help-inline">e.g. "Dr."</span>
    </div>

    <div><%= f.text_field :first_name, required: true, placeholder: "First Name" %></div>

    <div><%= f.text_field :middle_name, placeholder: "Middle Name" %></div>

    <div><%= f.text_field :last_name, required: true, placeholder: "Last Name" %></div>

    <div class="input-prepend">
      <span class="add-on">@</span>
      <%= f.email_field :email, required: true, placeholder: "Email Address" %>
    </div>

    <div class="input-prepend">
      <span class="add-on"><i class="fa fa-phone"></i></span>
      <%= f.text_field :phone, placeholder: "Phone Number" %>
    </div>

    <div class="input-prepend">
      <span class="add-on"><i class="fa fa-key"></i></span>
      <%= f.password_field :password, required: true, placeholder: "Password", autocomplete: "off" %>
    </div>

    <div class="input-prepend">
      <span class="add-on"><i class="fa fa-key"></i></span>
      <%= f.password_field :password_confirmation, required: true, placeholder: "Confirm Password", autocomplete: "off" %>
    </div>

    <div class="lead">I am:</div>
    <div><label class="radio"><%= f.radio_button :wants_to_be_instructor, "false", checked: true %> a Student</label></div>
    <div><label class="radio"><%= f.radio_button :wants_to_be_instructor, "true" %> an Instructor</label></div>
    <br/>

    <div class="lead">My school is:</div>
    <div><%= f.select :school_id, School.all.collect {|s| [ s.name, s.id ] }, {include_blank: 'Not Listed'} %></div>
    <br/>

    <div><%= f.submit "Sign up", class: "btn" %></div>
  <% end %>

</div>