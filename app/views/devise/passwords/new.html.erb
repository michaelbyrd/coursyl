<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-signin", method: :post }) do |f| %>
  <h2>Forgot password?</h2>

  <%= devise_error_messages! %>

  <div><%= f.email_field :email, autofocus: true, placeholder: "Email Address" %></div>

  <div><%= f.submit "Send reset instructions", class: "btn" %></div>
<% end %>
