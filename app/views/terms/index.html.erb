<div class="row">
  <div class="span6">
    <h2>All Terms</h2>
  </div>
  <div class="span6 vertical-middle">
    <div class="pull-right"><%= link_to '<i class="fa fa-plus"></i> New Term'.html_safe, new_term_path, class: "btn btn-success list-page-new-button" %></div>
  </div>
</div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>School</th>
      <th>Name</th>
      <th>Starts On</th>
      <th>Ends On</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @terms.each do |term| %>
      <tr>
        <td><%= term.school_name %></td>
        <td><%= term.name %></td>
        <td><%= term.starts_on.to_date %></td>
        <td><%= term.ends_on.to_date %></td>
        <td class="text-right"><%= link_to 'Edit', edit_term_path(term), class: "btn btn-mini" %>
            <%= link_to 'Delete', term, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>