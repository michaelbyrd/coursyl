<h2>All Users</h2>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>School</th>
      <th class="text-center">Student?</th>
      <th class="text-center">Instructor?</th>
      <th class="text-center">Admin?</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.school_name %></td>
        <td class="text-center"><%= '<i class="fa fa-check-square text-info"></i>'.html_safe if user.student? %></td>
        <td class="text-center"><%= '<i class="fa fa-check-square text-info"></i>'.html_safe if user.instructor? %></td>
        <td class="text-center"><%= '<i class="fa fa-check-square text-info"></i>'.html_safe if user.admin? %></td>
        <td class="text-right"><%= link_to 'Edit', edit_user_path(user), class: "btn btn-mini" %>
            <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
