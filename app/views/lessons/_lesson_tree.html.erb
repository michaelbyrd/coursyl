<div class="lesson-tree">
  <% @root_lessons.each do |l| %>
    <%= render partial: "lesson_tree_node", locals: {lesson: l, depth: 0, editable: editable} %>
  <% end %>
  <% if editable && @root_lessons.blank? %>
      <%= link_to '<i class="fa fa-plus"></i> Add Root Lesson'.html_safe,
        new_lesson_path(course_id: @course.id, parent_lesson_id: nil),
        class: "btn btn-success" %>
  <% end %>
</div>